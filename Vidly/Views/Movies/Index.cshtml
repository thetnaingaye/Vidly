@model IEnumerable<Vidly.Models.Movie>


@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Movies</h2>

    @if (!Model.Any())
    {
        <p>No moives.</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <td>
                        <strong>Movie</strong>
                    </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            @movie.Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    </div>

